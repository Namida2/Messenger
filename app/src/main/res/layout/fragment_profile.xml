<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/user_avatar_image_view"
            android:background="@drawable/bg_user_avatar"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/image_base_avatar"/>
        <ImageView
            android:layout_below="@id/user_avatar_image_view"
            android:layout_toEndOf="@id/user_avatar_image_view"
            android:layout_marginTop="-32dp"
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"/>

        <TextView
            android:layout_marginTop="14dp"
            android:id="@+id/name"
            android:layout_below="@id/user_avatar_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:gravity="center"
            android:text="Name:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:layout_toRightOf="@id/name"
            android:id="@+id/user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="James Hornerd"
            android:textSize="20sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:inputType="text"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@color/black"
            android:layout_below="@id/user_avatar_image_view"
            android:fontFamily="@font/montserrat_semi_bold"/>

        <TextView
            android:layout_marginTop="18dp"
            android:id="@+id/status"
            android:layout_below="@id/user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:gravity="center"
            android:text="Status:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:layout_marginStart="8dp"
            android:id="@+id/user_status_text_view"
            android:layout_toRightOf="@id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name_text_view"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:textCursorDrawable="@color/black"
            android:text="Equidem concludaturque ad has, eos facilis delicatissimi cu, no odio."
            android:textColor="@color/black"
            android:textSize="16sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/city"
                android:layout_below="@id/user_status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:text="City:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/user_city_text_view"
                android:layout_toRightOf="@id/city"
                android:layout_marginStart="8dp"
                android:layout_below="@id/user_status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New York"
                android:textSize="16sp"
                android:layout_marginEnd="16dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textCursorDrawable="@color/black"
                android:textColor="@color/black"
                android:gravity="center"
                android:fontFamily="@font/montserrat_regular"/>

            <TextView
                android:id="@+id/age"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_below="@id/user_city_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:fontFamily="@font/montserrat_semi_bold"/>

            <EditText
                android:layout_below="@id/user_city_text_view"
                android:layout_toRightOf="@id/age"
                android:id="@+id/user_age_text_view"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:maxWidth="42dp"
                android:textSize="16sp"
                android:maxLines="1"
                android:textCursorDrawable="@color/black"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:gravity="center"
                android:fontFamily="@font/montserrat_regular"/>

            <TextView
                android:id="@+id/sex"
                android:layout_marginTop="10dp"
                android:layout_below="@id/user_age_text_view"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sex:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:fontFamily="@font/montserrat_semi_bold"/>

            <EditText
                style="simpleEditTextStyle"
                android:layout_toRightOf="@id/sex"
                android:layout_below="@id/user_age_text_view"
                android:id="@+id/user_sex_text_view"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textCursorDrawable="@color/black"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:gravity="center"
                android:fontFamily="@font/montserrat_regular"/>

        <Button
            android:layout_below="@id/user_sex_text_view"
            android:id="@+id/accept_changes_button"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:paddingStart="24dp"
            android:textSize="14dp"
            android:text="Применить изменения" />

        <Button
            android:layout_below="@id/accept_changes_button"
            android:id="@+id/out_button"
            style="@style/empty_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:paddingStart="24dp"
            android:textSize="14dp"
            android:text="Выйти из этого аккаунта" />

    </RelativeLayout>

</ScrollView>